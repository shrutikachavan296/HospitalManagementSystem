@model HospitalManagementSystem.Models.Appointment
@using Microsoft.AspNetCore.Http

@{
    ViewData["Title"] = "Add Appointment";
    Layout = "_Layout";

    var role = Context.Session.GetString("UserRole") ?? "";
    var userIdStr = Context.Session.GetString("UserId") ?? "";
    int.TryParse(userIdStr, out var currentUserId);

    var isAdminOrDoctor = role.Equals("Admin", StringComparison.OrdinalIgnoreCase)
                         || role.Equals("Doctor", StringComparison.OrdinalIgnoreCase);

   
    var preselected = ViewBag.PreselectedPatientId as int?;
}

<h2 class="text-primary mb-3">Add Appointment</h2>

<form asp-action="Create" method="post" class="row g-3">
    @Html.AntiForgeryToken()

    <div class="col-md-6">
        <label asp-for="PatientId" class="form-label">Select Patient</label>

        @if (!isAdminOrDoctor && preselected != null)
        {
        
            <select class="form-select" disabled>
                <option value="">-- Select Patient --</option>
             
                @{
                    var items = (IEnumerable<SelectListItem>)ViewBag.Patients;
                    var selectedItem = items?.FirstOrDefault(i => i.Value == preselected.ToString());
                }
                <option selected="selected" value="@selectedItem?.Value">@selectedItem?.Text</option>
            </select>

            <input type="hidden" asp-for="PatientId" value="@preselected" />
        }
        else
        {
            <select asp-for="PatientId" class="form-select" asp-items="ViewBag.Patients">
                <option value="">-- Select Patient --</option>
            </select>
        }

        <span asp-validation-for="PatientId" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="DoctorId" class="form-label">Select Doctor</label>
        <select asp-for="DoctorId" class="form-select" asp-items="ViewBag.Doctors">
            <option value="">-- Select Doctor --</option>
        </select>
        <span asp-validation-for="DoctorId" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="AppointmentDate" class="form-label"></label>
        <input asp-for="AppointmentDate" type="date" class="form-control" />
        <span asp-validation-for="AppointmentDate" class="text-danger"></span>
    </div>

    <div class="col-md-12">
        <label asp-for="Notes" class="form-label"></label>
        <textarea asp-for="Notes" class="form-control"></textarea>
        <span asp-validation-for="Notes" class="text-danger"></span>
    </div>

    <div class="col-12">
        <button class="btn btn-success">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Back</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
